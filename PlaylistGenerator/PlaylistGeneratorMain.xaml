<Window x:Class="PlaylistGenerator.PlaylistGeneratorMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:toolkit="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Add" Click="Button_Click"/>
            <Button Content="Delete" Click="Button_Click_1" VerticalAlignment="Bottom"/>
        </ToolBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <ListView Name="lvCode" ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Playlist" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <ComboBox IsReadOnly="True" ItemsSource="{Binding Playlists}" Text="{Binding Playlist}" HorizontalAlignment="Stretch"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Duration(min)" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <toolkit:IntegerUpDown  Text="{Binding Duration}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView> 
                </ListView.View>
            </ListView>
            <GridSplitter Grid.Column="1" Width="2" ResizeDirection="Columns" HorizontalAlignment="Stretch"/>
            <StackPanel Grid.Column="2">
                <ComboBox Name="combo" ItemsSource="{Binding}">
                    
                </ComboBox>
                <toolkit:IntegerUpDown/>
            </StackPanel>
        </Grid>
        
    </DockPanel>
</Window>
