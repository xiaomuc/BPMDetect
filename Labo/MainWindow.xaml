        <charting:Chart Grid.Column="2" Title="差分自己相関">
            <charting:Chart.LegendStyle>
                <Style TargetType="datavis:Legend">
                    <Setter Property="Width" Value="0" />
                </Style>
            </charting:Chart.LegendStyle>
            <charting:Chart.TitleStyle>
                <Style TargetType="datavis:Title">
                    <Setter Property="FontSize" Value="10"/>
                </Style>
            </charting:Chart.TitleStyle>
            <charting:LineSeries Name="seriesDiffAutoCorrelation" DependentValuePath="Value" IndependentValuePath="Key" 
                ItemsSource="{Binding}" DataContext="{Binding}" IsSelectionEnabled="True" BorderBrush="Blue" Style="{StaticResource SimpleLineSeriesStyle}"></charting:LineSeries>
            <charting:LineSeries Name="seriesDiffLinear" DependentValuePath="Value" IndependentValuePath="Key" 
                ItemsSource="{Binding}" DataContext="{Binding}" IsSelectionEnabled="True" BorderBrush="Brown" Style="{StaticResource SimpleLineSeriesStyle}"></charting:LineSeries>
        </charting:Chart>
        <charting:Chart Grid.Column="2" Grid.Row="2" Title="差分BPM">
            <charting:Chart.LegendStyle>
                <Style TargetType="datavis:Legend">
                    <Setter Property="Width" Value="0" />
