<Window x:Class="BpmDetectorw.DetectorMainWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"
        xmlns:self="clr-namespace:BpmDetectorw"
        Title="BpmDetector" FontFamily="Source Code Pro" Closed="Window_Closed">
    <Window.Resources>
        <self:TrackToImageSourceConverter x:Key="TrackToImageSourceConverter" />
    </Window.Resources>
    <DockPanel LastChildFill="True">
        <StatusBar DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <StatusBarItem Content="{Binding Path=SelectedItem.iTunesPlaylist.Tracks.Count,ElementName=trvPlayList,Mode=OneWay}"/>
            <StatusBarItem>Songs,</StatusBarItem>
            <StatusBarItem Content="{Binding Path=SelectedItem.iTunesPlaylist.Time,ElementName=trvPlayList,Mode=OneWay}"/>
        </StatusBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TreeView Name="trvPlayList">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type self:PlaylistTreeItem}" ItemsSource="{Binding Items}">
                        <TextBlock Text="{Binding Title}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <GridSplitter Width="5"/>

            <DockPanel Grid.Column="1" LastChildFill="True">
                <DockPanel DockPanel.Dock="Bottom"  Height="150" Width="Auto" >
                    <Image DockPanel.Dock="Left" Source="{Binding Path=SelectedItem ,ElementName=lvTracks, Converter={StaticResource TrackToImageSourceConverter}}"/>
                    <Grid DockPanel.Dock="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <TextBlock Margin="1" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Background="LightGray">Name</TextBlock>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="1" Grid.Row="0" Text="{Binding SelectedItem.Name,ElementName=lvTracks}" FontWeight="Bold" FontSize="16"  TextTrimming="CharacterEllipsis"/>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="0" Grid.Row="1" Background="LightGray">Artist</TextBlock>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="1" Grid.Row="1" Text="{Binding SelectedItem.Artist,ElementName=lvTracks}"  TextTrimming="CharacterEllipsis"/>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="0" Grid.Row="2" Background="LightGray">Album</TextBlock>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="1" Grid.Row="2" Text="{Binding SelectedItem.Album,ElementName=lvTracks}" FontSize="14" FontStyle="Italic" TextTrimming="CharacterEllipsis"/>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="0" Grid.Row="3" Background="LightGray">Time</TextBlock>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="1" Grid.Row="3" Text="{Binding SelectedItem.Time,ElementName=lvTracks}"  FontWeight="Bold" TextTrimming="CharacterEllipsis"/>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="0" Grid.Row="4" Background="LightGray">BPM</TextBlock>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="1" Grid.Row="4"  Text="{Binding SelectedItem.BPM,ElementName=lvTracks}"  FontWeight="Bold" TextTrimming="CharacterEllipsis" />
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="0" Grid.Row="5" Background="LightGray">Kind</TextBlock>
                        <TextBlock VerticalAlignment="Center" Margin="1" Grid.Column="1" Grid.Row="5"  Text="{Binding SelectedItem.KindAsString,ElementName=lvTracks}"  FontWeight="Bold" TextTrimming="CharacterEllipsis" />
                        <my:Chart Name="chartBPM" Grid.Column="2" Grid.RowSpan="6">
                            <my:LineSeries Name="lineSeries1" DependentValuePath="Value" 
                                IndependentValuePath="Key" ItemsSource="{Binding}" 
                                           DataContext="{Binding}"
                                IsSelectionEnabled="True"/>
                        </my:Chart>
                        <!--WindowsFormsHost Name="HostChart" Grid.Column="2" Grid.RowSpan="6">
                            <wfc:Chart Name="chartBPM">
                                <wfc:Chart.Series>
                                    <wfc:Series ChartArea="ChartAreaBPM" Name="seriesBPM" ChartType="Line"/>
                                    <wfc:Series ChartType="Point" ChartArea="ChartAreaBPM" Name="seriesPeak"/>
                                </wfc:Chart.Series>
                                <wfc:Chart.ChartAreas>
                                    <wfc:ChartArea Name="ChartAreaBPM" />
                                </wfc:Chart.ChartAreas>
                            </wfc:Chart>
                        </-->
                    </Grid>
                </DockPanel>
                <ListView Name="lvTracks"  VirtualizingPanel.IsVirtualizing="True" AlternationCount="2"
                    ItemsSource="{Binding Path=SelectedItem.iTunesPlaylist.Tracks,ElementName=trvPlayList,Mode=OneWay}" >
                    <ListView.Resources>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="HorizontalContentAlignment" Value="Left" />
                            <Setter Property="Margin" Value="5,1,1,0" />
                        </Style>

                    </ListView.Resources>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter Event="MouseDoubleClick" Handler="lvTracks_MouseDoubleClick"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            <Style.Triggers>
                                <Trigger Property="ItemsControl.AlternationIndex" Value="0">
                                    <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.WindowColor}}"></Setter>
                                </Trigger>
                                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                                    <Setter Property="Background" Value="LightGray"></Setter>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="Orange"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.View>
                        <GridView AllowsColumnReorder="True">
                            <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" />
                            <GridViewColumn DisplayMemberBinding="{Binding Artist}" Header="Artist"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Album}" Header="Album"/>
                            <GridViewColumn DisplayMemberBinding="{Binding Time}" Header="Time"/>
                            <GridViewColumn Header="BPM" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding BPM}" TextAlignment="Right"  />
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView>
                    </ListView.View>
                </ListView>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
